<script type="text/javascript">

    jQuery(document).ready(function() {
        jQuery(".signuppop").fancybox({
            maxWidth	: 593,
            maxHeight	: 343,
            autoHeight  : true,
            fitToView	: false,
            width		: '100%',
            height		: '100%',
